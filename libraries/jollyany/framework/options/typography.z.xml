<?xml version="1.0" encoding="UTF-8"?>
<form>
   <fields name="params">
      <fieldset icon="fa fa-font" label="ASTROID_OPTIONS_TYPOGRAPHY" name="astroid_typography" addfieldpath="/libraries/astroid/framework/fields" order="5">
